# ACSO API Gateway Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
API_PREFIX=/api/v1

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security Settings
SECURITY_SECRET_KEY=your-secret-key-change-in-production
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
SECURITY_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://acso.example.com"]
SECURITY_CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
SECURITY_RATE_LIMIT_CALLS=100
SECURITY_RATE_LIMIT_PERIOD=60

# Trusted Hosts
SECURITY_ALLOWED_HOSTS=["localhost","127.0.0.1","acso.example.com"]

# Database Settings
DATABASE_URL=postgresql://acso:acso@localhost:5432/acso
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# WebSocket Settings
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_CONNECTION_TIMEOUT=60
WEBSOCKET_MESSAGE_QUEUE_SIZE=100
WEBSOCKET_BROADCAST_BUFFER_SIZE=1000

# Cache Settings
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000
CACHE_AGENT_STATUS_TTL=30
CACHE_METRICS_TTL=60
CACHE_CONFIG_TTL=600

# Logging Settings
LOGGING_LEVEL=INFO
LOGGING_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOGGING_FILE_ENABLED=true
LOGGING_FILE_PATH=logs/acso-api.log
LOGGING_FILE_MAX_SIZE=10485760
LOGGING_FILE_BACKUP_COUNT=5
LOGGING_JSON_FORMAT=false
LOGGING_INCLUDE_REQUEST_ID=true

# Monitoring Settings
MONITORING_ENABLED=true
MONITORING_METRICS_ENDPOINT=/metrics
MONITORING_HEALTH_ENDPOINT=/health
MONITORING_SLOW_QUERY_THRESHOLD=1.0
MONITORING_REQUEST_TIMEOUT=30
MONITORING_ERROR_RATE_THRESHOLD=0.05
MONITORING_RESPONSE_TIME_THRESHOLD=2.0

# AWS Settings (for future use)
AWS_REGION=us-east-1
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0