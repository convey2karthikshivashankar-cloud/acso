{
  "serviceName": "acso-api-server",
  "cluster": "acso-${ENVIRONMENT}-cluster",
  "taskDefinition": "acso-api-server",
  "desiredCount": 2,
  "launchType": "FARGATE",
  "platformVersion": "LATEST",
  "networkConfiguration": {
    "awsvpcConfiguration": {
      "subnets": ["${PRIVATE_SUBNET_1}", "${PRIVATE_SUBNET_2}"],
      "securityGroups": ["${API_SECURITY_GROUP}"],
      "assignPublicIp": "DISABLED"
    }
  },
  "loadBalancers": [
    {
      "targetGroupArn": "${API_TARGET_GROUP_ARN}",
      "containerName": "acso-api-server",
      "containerPort": 8000
    }
  ],
  "serviceRegistries": [
    {
      "registryArn": "${SERVICE_DISCOVERY_ARN}",
      "containerName": "acso-api-server"
    }
  ],
  "deploymentConfiguration": {
    "maximumPercent": 200,
    "minimumHealthyPercent": 50,
    "deploymentCircuitBreaker": {
      "enable": true,
      "rollback": true
    }
  },
  "enableExecuteCommand": true,
  "tags": [
    {
      "key": "Environment",
      "value": "${ENVIRONMENT}"
    },
    {
      "key": "Project",
      "value": "acso"
    },
    {
      "key": "Service",
      "value": "api-server"
    }
  ]
}